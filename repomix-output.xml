document.addEventListener('DOMContentLoaded', () => {
    const sidebar = document.getElementById('sidebar');
    const sidebarToggle = document.getElementById('sidebar-toggle');
    const navLinks = document.querySelectorAll('#sidebar a');

    // --- 页面加载逻辑 ---
    // 检查是否有“固定展开”的状态需要继承
    if (sessionStorage.getItem('sidebarPinned') === 'true') {
        sidebar.classList.add('is-pinned');
        sessionStorage.removeItem('sidebarPinned'); // 读取后即焚
    }

    // --- 交互事件监听 ---

    // 1. 点击切换按钮：切换“固定”状态
    sidebarToggle.addEventListener('click', (event) => {
        event.stopPropagation(); // 防止事件冒泡
        sidebar.classList.toggle('is-pinned');
    });

    // 2. 鼠标悬浮：添加临时的“悬浮”状态
    sidebar.addEventListener('mouseenter', () => {
        sidebar.classList.add('is-open');
    });

    // 3. 鼠标离开：移除临时的“悬浮”状态
    sidebar.addEventListener('mouseleave', () => {
        sidebar.classList.remove('is-open');
    });

    // 4. 点击导航链接：处理状态转换
    navLinks.forEach(link => {
        link.addEventListener('click', () => {
            // 核心逻辑：如果导航栏是“悬浮展开”但不是“固定展开”
            if (sidebar.classList.contains('is-open') && !sidebar.classList.contains('is-pinned')) {
                // 则在跳转前，将其状态“提升”为固定状态
                sessionStorage.setItem('sidebarPinned', 'true');
            } 
            // 如果导航栏本身就是“固定展开”的
            else if (sidebar.classList.contains('is-pinned')) {
                // 则在跳转后依然保持这个状态
                sessionStorage.setItem('sidebarPinned', 'true');
            }
            // 如果是收缩状态下点击（理论上不可能），则不执行任何操作
        });
    });

    // --- 导航高亮逻辑 (保持不变) ---
    const currentPagePath = window.location.pathname;
    document.querySelectorAll('#sidebar a').forEach(link => {
        const linkPath = link.getAttribute('href');
        if (currentPagePath.endsWith(linkPath)) {
            link.classList.add('active');
        }
    });
});
